import org.springframework.web.bind.annotation.RequestParam;

@Controller
public class ChatController2 {

    @GetMapping("/chat2")
    public String chatGET(@RequestParam(name = "roomId", required = false) String roomId) {
        return "chater2"; // roomId를 HTML로 전달할 수 있습니다.
    }
}