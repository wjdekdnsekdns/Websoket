<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
</head>
<body>
<div>
    <div class="container">
        <div class="col-6">
            <label><b>채팅방</b></label>
        </div>
        <div class="col-6">
            <input type="text" id="roomId" class="form-control" placeholder="방 ID">
            <button id="enterRoom" class="btn btn-primary">방 입장</button>
        </div>
        <div>
            <div id="msgArea" class="col"></div>
            <div class="col-6">
                <div class="input-group mb-3">
                    <input type="text" id="msg" class="form-control" placeholder="메시지">
                    <button class="btn btn-outline-secondary" type="button" id="button-send">전송</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    let websocket;
    let roomId;

    $(document).ready(function(){
        $("#enterRoom").on("click", function() {
            roomId = $("#roomId").val();
            if (websocket) {
                websocket.close();
            }
            websocket = new WebSocket("ws://localhost:8080/ws/chat/" + roomId);
            websocket.onmessage = onMessage;
            websocket.onopen = onOpen;
            websocket.onclose = onClose;
        });

        $("#button-send").on("click", function() {
            send();
        });
    });

    function send() {
        let msg = $("#msg").val();
        websocket.send(roomId + ":" + msg);
        $("#msg").val('');
    }

    function onClose(evt) {
        console.log("Disconnected");
    }

    function onOpen(evt) {
        console.log("Connected to room: " + roomId);
    }

    function onMessage(msg) {
        $("#msgArea").append("<div>" + msg.data + "</div>");
    }
</script>

</body>
</html>